@model IEnumerable<CEMIG.MapadoSite.Data.Models.RelacaoAvaliacoes>

@{
    ViewData["Title"] = "Relação de Avaliações";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<h1 style="color:darkgreen">@ViewData["Title"]</h1>
<table class="table table-responsive-sm table-bordered table-striped table-sm" style="table-layout: fixed">
    <thead>
        <tr style="color: white; background-color: #005c34">
            <th width="10%" style="word-wrap: break-word; text-align:center">
                Nome Funcionário
            </th>
            <th style="word-wrap: break-word; text-align:center">
                Área
            </th>
            <th style="word-wrap: break-word; text-align:center">
                Fone
            </th>
            <th style="word-wrap: break-word; text-align:center">
                Info. Correta?
            </th>
            <th style="word-wrap: break-word; text-align:center">
                Regulatória?
            </th>
            <th style="word-wrap: break-word; text-align:center">
                Será Mantida?
            </th>
            <th width="20%" style="word-wrap: break-word; text-align:center">
                Página
            </th>
            <th style="word-wrap: break-word; text-align:center">
                
            </th>
            <th width="30%" style="word-wrap: break-word; text-align:center">
                Justificativa
            </th>
        </tr>
    </thead>
    @if (Model.Count() > 0)
    {
    <p>Digite informações da página para que possamos localizá-la:</p>
    <input class="form-control" id="myInput" type="text" placeholder="Pesquisar..">
    }
    <tbody id="myTable">
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
        <tr>
            <td style="word-wrap: break-word; text-align:center">
                @Html.DisplayFor(modelItem => item.NomeUsuario)
            </td>
            <td style="word-wrap: break-word; text-align:center">
                @Html.DisplayFor(modelItem => item.Orgao)
            </td>
            <td style="word-wrap: break-word; text-align:center">
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.InfoCorreta)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.ePaginaRegulatoria)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.PaginaSeraMantida)
            </td>
            <td style="word-wrap: break-word;">
                <code class="highlighter-rouge"><a href="@Url.Action("MenuDetail", "Home")?id=@item.IdMenu" target="_blank">@Html.DisplayFor(modelItem => item.Link)</a></code>
            </td>
            <td style="word-wrap: break-word; background-color: @item.Cor; color: @item.Cor">
                @switch (item.Cor)
                {
                    case "Yellow":
                        <div>Amarelo</div>
                        break;
                    case "Orange":
                        <div>Laranjado</div>
                        break;
                    case "Red":
                        <div>Vermelho</div>
                        break;
                    case "Green":
                        <div>Verde</div>
                        break;
                    case "Purple":
                        <div>Roxo</div>
                        break;
                }
            </td>
            <td style="word-wrap: break-word;">
                @Html.DisplayFor(modelItem => item.Justificativa)
            </td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td>
                        Sem registros até o momento.
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>