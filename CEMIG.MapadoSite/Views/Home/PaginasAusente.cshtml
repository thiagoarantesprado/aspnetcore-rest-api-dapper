@model IEnumerable<CEMIG.MapadoSite.Data.Models.PaginaAusente>

@{
    ViewData["Title"] = "Informações de Páginas Ausente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group" style="text-align: right">
    <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#myModalCriarPaginaAusente">
        <i class="fa cui-pencil icons"></i>&nbsp;Criar Nova Página Ausente
    </button>
</div>
<table class="table table-responsive-sm table-bordered table-striped table-sm" style="table-layout: fixed">
    <thead>
        <tr style="color: white; background-color: #005c34">
            <th width="30%">
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th width="35%">
                Observação
            </th>
            <th>
                Usuário
            </th>
            <th>
                Fone
            </th>
            <th>
                Área
            </th>
            <th>
                Data de Criação
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
        <tr>
            <td style="word-wrap: break-word;">
                <code class="highlighter-rouge"><a href="http://@(item.Link)" target="_blank">@Html.DisplayFor(modelItem => item.Link)</a></code>
            </td>
            <td style="word-wrap: break-word;">
                @Html.DisplayFor(modelItem => item.Observacao)
            </td>
            <td style="word-wrap: break-word;">
                @Html.DisplayFor(modelItem => item.NomeUsuario)
            </td>
            <td style="word-wrap: break-word; text-align:right">
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td style="word-wrap: break-word; text-align:center">
                @Html.DisplayFor(modelItem => item.Orgao)
            </td>
            <td style="word-wrap: break-word; text-align:center">
                @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
        </tr>
            }
        }
        else
        {
    <tr>
        <td>
            Sem registros até o momento.
        </td>
        <td>
        </td>
        <td>
        </td>
        <td>
        </td>
    </tr>
        }
    </tbody>
</table>

@section Modals {
    <div class="modal fade" id="myModalCriarPaginaAusente" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-gray" style="color: white">
                    <h2>Incluir Página Ausente</h2>
                </div>
                <div class="modal-body bg-gray-100">
                    <div class="col-sm-12">
                        <div class="card">
                            @*<div class="card-header bg-gray">

                                </div>*@
                            <div class="card-body bg-gray-100">
                                @{Html.RenderPartial("_CriarPaginaAusente", new CEMIG.MapadoSite.Data.Models.PaginaAusente());}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
}