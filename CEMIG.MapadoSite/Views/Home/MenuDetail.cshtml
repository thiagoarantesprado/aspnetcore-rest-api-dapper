@using CEMIG.MapadoSite.Business.Interfaces;
@model CEMIG.MapadoSite.Data.Models.Menu
@{
    ViewBag.Title = "Informações detalhadas do Link";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body collapse show" id="collapseExample">
                <form class="form-horizontal">
                    <div class="row">
                        <div class="form-group col-sm-2">
                            <label for="Id">@Html.DisplayNameFor(model => model.Id)</label>
                            <input type="text" readonly="readonly" class="form-control" id="Id" placeholder="" value="@Html.DisplayFor(model => model.Id)">
                        </div>

                        <div class="form-group col-sm-6">
                            <label for="Nome">@Html.DisplayNameFor(model => model.Nome)</label>
                            <input type="text" readonly="readonly" class="form-control" id="Nome" placeholder="" value="@Html.DisplayFor(model => model.Nome)">
                        </div>


                        <div class="form-group col-sm-4">
                            <label for="Nome">Status Link</label>
                            <input type="text" style="background-color: @Html.DisplayFor(model => model.Cor)" readonly="readonly" class="form-control" id="Nome" placeholder="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="link">@Html.DisplayNameFor(model => model.Link)</label>
                        <a class="form-control" target="_blank" readonly="readonly" id="link" placeholder="@Html.DisplayFor(model => model.Link)" href="@Html.DisplayFor(model => model.Link)">@Html.DisplayFor(model => model.Link)</a>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-2">
                            <label for="QtdViewPage">Visualizações anuais</label>
                            <input type="text" readonly="readonly" class="form-control" id="QtdViewPage" placeholder="" value="@Html.DisplayFor(model => model.QtdViewPage)">
                        </div>
                        @{ decimal mediaAnual = 0M;}
                        @{ var item = this.Model;
                            mediaAnual = Convert.ToDecimal(item.QtdViewPage) / 365;
                            <div class="form-group col-sm-2">
                                <label for="QtdViewPage">Média diária</label>
                                <input type="text" readonly="readonly" class="form-control" id="QtdViewPage" placeholder="" value="@string.Format("{0:00.00}", mediaAnual)">
                            </div>
                        }

                        <div class="form-group col-sm-4">
                            <label for="QtdUnViewPage">Quantidade Acessos por sessão anuais</label>
                            <input type="text" readonly="readonly" class="form-control" id="QtdUnViewPage" placeholder="" value="@Html.DisplayFor(model => model.QtdUnViewPage)">
                        </div>
                        <div class="form-group col-sm-3">
                            <label for="QtdEnterAcess">Entradas a partir de outro site</label>
                            <input type="text" readonly="readonly" class="form-control" id="QtdEnterAcess" placeholder="" value="@Html.DisplayFor(model => model.QtdEnterAcess)">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label for="MediumTimeAccess">Tempo médio em segundos</label>
                            <input type="text" readonly="readonly" class="form-control" id="MediumTimeAccess" placeholder="" value="@Html.DisplayFor(model => model.MediumTimeAccess)">
                        </div>
                        @{ decimal percentRejeicao = 0M; }
                        @{ var itemRejeicao = this.Model;
                            percentRejeicao = Convert.ToDecimal(itemRejeicao.RejectionTax) * 100;
                            <div class="form-group col-sm-4">
                                <label for="RejectionTax">Taxa de Rejeição</label>
                                <input type="text" readonly="readonly" class="form-control" id="RejectionTax" placeholder="" value="@string.Format("{0:00.00}", percentRejeicao) %">
                            </div>
                        }
                        @{ decimal percentSaida = 0M; }
                        @{ var itemSaida = this.Model;
                            percentSaida = Convert.ToDecimal(itemSaida.ExitTax) * 100;
                            <div class="form-group col-sm-4">
                                <label for="RejectionTax">Percentual de Saída</label>
                                <input type="text" readonly="readonly" class="form-control" id="RejectionTax" placeholder="" value="@string.Format("{0:00.00}", percentSaida) %">
                            </div>
                        }
                    </div>
                    <div class="form-actions" style="text-align: right">
                        <div class="form-group" style="text-align: left">
                            <label style="color:red">Caso o link não funcione, provavelmente o mesmo foi excluido do site. Procure o setor de comunicação.</label>
                        </div>

                        <div class="form-group" style="text-align: right">
                            <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#myModal">
                                <i class="fa cui-pencil icons"></i>&nbsp;Incluir Avaliação
                            </button>
                            <button type="button" onclick="window.close(); return false;" class="btn btn-outline-dark">Fechar</button>
                        </div>
                    </div>
                    <div class="row">
                        @{Html.RenderPartial("_ListaComentarios", Model.Avaliacoes);}
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--/.col-->
</div>

@section Modals {    
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                </div>
                <div class="modal-body">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h2>Incluir avaliação</h2>
                            </div>
                            <div class="card-body">                                
                                @{Html.RenderPartial("_CriarComentario", new CEMIG.MapadoSite.Data.Models.MenuAvaliacao(), new ViewDataDictionary(ViewData) { { "IdMenu", Model.Id } });}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
}