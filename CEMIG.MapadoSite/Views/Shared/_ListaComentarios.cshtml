@model List<CEMIG.MapadoSite.Data.Models.MenuAvaliacao>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th width="10%">
                    Informação correta?
                </th>
                <th width="10%">
                    Regulatório?
                </th>
                <th width="10%">
                    Será Mantida?
                </th>
                <th width="50%">
                    Justificativa
                </th>
                <th width="10%">
                    Criado por
                </th>
                <th width="10%">
                    Criado em
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InfoCorreta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ePaginaRegulatoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaginaSeraMantida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Justificativa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCriacao)
                    </td>

                </tr>

            }

        </tbody>
    </table>

}
else
{
    <div class="col-md-12 alert alert-success" role="alert" style="text-align:center">
        Ainda não existem avaliações para esta página. Nos ajude com sua avaliação =)
    </div>
}


